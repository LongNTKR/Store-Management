# ==============================================
# SECURITY & ENCRYPTION (REQUIRED)
# ==============================================
# Secret key for encrypting AI API keys
# IMPORTANT: Must be at least 32 characters long
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-at-least-32-characters-long-change-this-to-random-value

# ==============================================
# APPLICATION SETTINGS
# ==============================================
COMPANY_NAME=Cửa Hàng Gia Đình
APP_THEME=blue
APP_COLOR_MODE=light

# ==============================================
# DATABASE
# ==============================================
# Path to SQLite database file (relative to backend/data or absolute path)
DATABASE_PATH=data/store_management.db

# ==============================================
# AI SERVICES (Optional - Configure via UI)
# ==============================================
# Note: AI API keys should be configured through the web UI with master password
# Legacy Google Cloud Vision API configuration (if using JSON file):
GOOGLE_CREDENTIALS_PATH=

# ==============================================
# DIRECTORIES
# ==============================================
# All paths relative to backend directory
IMAGE_DIR=data/images/products
INVOICE_DIR=data/invoices
TEMP_DIR=data/temp

# Maximum number of images per product
MAX_PRODUCT_IMAGES=5
MAX_PAGE_SIZE=50

# ==============================================
# INVOICE SETTINGS
# ==============================================
# Tax rate (0.1 = 10%)
DEFAULT_TAX_RATE=0
# Discount (0.1 = 10%)
DEFAULT_DISCOUNT=0

# ==============================================
# SEARCH SETTINGS
# ==============================================
# Number of results to return for image similarity search
IMAGE_SEARCH_TOP_K=5
# Similarity threshold (0.0 to 1.0, lower = more strict)
IMAGE_SEARCH_THRESHOLD=0.3
